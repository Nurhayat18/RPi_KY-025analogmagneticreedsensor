import machine
import time

reed_pin = machine.Pin(7, machine.Pin.IN)     
buzzer_pin = machine.Pin(8, machine.Pin.OUT)  
led_pin = machine.Pin(9, machine.Pin.OUT)
led_pin1 = machine.Pin(6, machine.Pin.OUT) 

while True:
    if reed_pin.value() == 1:
        print("Manyetik alan alg覺land覺!")
        buzzer_pin.value(1) 
        led_pin.value(1)
        led_pin1.value(0)
    else:
        print("Manyetik alan alg覺lanmad覺.")
        buzzer_pin.value(0) 
        led_pin1.value(1)
        led_pin.value(0)
    time.sleep(1)
